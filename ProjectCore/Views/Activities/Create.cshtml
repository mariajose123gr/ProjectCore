@model ProjectCore.DAL.Models.Activities

@{
    ViewData["Title"] = "Create";
}

<h2>Create  Activities</h2>

<h4>Activities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary ">
                    <i class="fa fas-save"></i>
                    </button>
                
                @Html.ActionLink("", "Index", "Activities",null, new { @class = "btn btn-primary fas fa-undo-alt " })


            </div>
        </form>
    </div>
</div>


